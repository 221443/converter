{
    "extends": [
        "next/core-web-vitals",
        "prettier"
    ],
    "rules": {
        "no-unused-vars": "warn",
        "no-console": "warn",
        "prefer-const": "error",
        "no-var": "error"
    },
    "overrides": [
        {
            "files": [
                "tests/**/*.js"
            ],
            "env": {
                "node": true
            },
            "globals": {
                "describe": "readonly",
                "it": "readonly",
                "expect": "readonly",
                "beforeEach": "readonly",
                "vi": "readonly"
            }
        }
    ]
}